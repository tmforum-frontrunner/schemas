{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "TestCase.schema.json",
    "title": "TestCase",
    "definitions": {
        "TestCase": {
            "type": "object",
            "description": "A managed test case resource",
            "required": [
                "testCaseDefinition"
            ],
            "properties": {
                "testCaseDefinition": {
                    "$ref": "TestCaseDefinition.schema.json#/TestCaseDefinition"
                }
            },
            "allOf": [
                {
                    "$ref": "ManagedArtifact.schema.json#/ManagedArtifact"
                }
            ]
        }
    }
}